<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" style="-fx-padding: 20; -fx-background-color: white;" xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.kisiselsagliktakipsistem.ProfileEditController">
    <children>
        <Label text="Profil Bilgilerini Düzenle" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <GridPane hgap="10.0" vgap="10.0">
            <children>
                <Label text="Ad:" GridPane.rowIndex="0"/>
                <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Soyad:" GridPane.rowIndex="1"/>
                <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Cinsiyet:" GridPane.rowIndex="2"/>
                <ComboBox fx:id="genderComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Doğum Tarihi:" GridPane.rowIndex="3"/>
                <DatePicker fx:id="birthDatePicker" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Boy (cm):" GridPane.rowIndex="4"/>
                <TextField fx:id="heightField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <Label text="Kan Grubu:" GridPane.rowIndex="5"/>
                <ComboBox fx:id="bloodTypeComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
            </children>
        </GridPane>

        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Button mnemonicParsing="false" onAction="#onSave" text="Kaydet"/>
                <Button mnemonicParsing="false" onAction="#onCancel" text="İptal"/>
            </children>
        </HBox>
    </children>
</VBox> 